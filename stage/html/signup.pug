- var pageTitle = 'Sign up'
doctype html
html
  head
    include layout/meta-files
    title #{pageTitle}
  body
    div(class='top' style='min-height:20px; background-color:#00BADF; width:100%;')
    div(class='container-fluid' style='margin-top:50px;')
      div(class='col-sm-2 col-sm-offset-5 col-xs-4 col-xs-offset-4 logo')
        img(src='images/forms/login.png' class='img-responsive')
      div(class='col-md-4 col-md-offset-4  col-xs-6 col-xs-offset-3 prag')
        p(class='lead add' style='text-align:center;') Sign up For NuzhaTec
      div(class='form-container')
        form(rol='form')
          div(class='form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1')
            div(class='line' style='min-height:2px; background-color:#eee; margin-bottom:8px;')
          div(class='form-group col-md-2 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1  input-fname')
            |First Name
            input(type='text' class='form-control input-name')
          div(class='form-group col-md-2  col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 input-lname')
            |Last Name
            input(type='text' class='form-control input-name')
          div(class='form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1')
            |Email
            input(type='text' class='form-control ')
          div(class='form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1')
            |Password
            input(type='text' class='form-control ')
          div(class='form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1')
            |Birthday
            input(type='text' class='form-control')
            input(type='checkbox') 
            | &nbsp;Marketing something via email
            br
            button(type='button' class='btn btn-primary btn-block sign') Sign up
          div(class='form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1 text-center')
            |or
          div(class='form-group col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1')
            button(type='button' class='btn btn-primary btn-block face-login') <span>f</span> Sign up with Facebook
            button(type='button' class='btn btn-primary btn-block google') 
              img(src='images/forms/google.png' class='Gimg' style='width:23px; padding-right:5px;')
              | Sign up with Google
          div( class='col-xs-12 col-xs-offset-1 visible-xs-block' style='min-height:30px') 
    img(src='images/forms/water.png' class='img-responsive' style='width:100%;')
    include layout/footer
    include layout/footer-scripts